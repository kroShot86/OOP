<Window x:Class="To_Do_List.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:To_Do_List"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="134*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="164*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Grid.Row="0" Grid.Column="0" Source="/maxresdefault.jpg" Grid.ColumnSpan="2" Margin="0,-8,0,0" Grid.RowSpan="5" Stretch="Fill"/>
        <Label Content="Квесты" FontSize="24" Foreground="#FF37F7EA" HorizontalAlignment="Center" VerticalAlignment="Center" Height="41" Width="88"/>
        <Label Grid.Column="1" Content="Подробности" FontSize="24" Foreground="#FF37F7EA" HorizontalAlignment="Center" VerticalAlignment="Center" Height="41" Width="160"/>
        <Button x:Name="new_kw" Grid.Row="1" Grid.Column="0" Content="Новый квест" VerticalAlignment="Top" FontSize="24" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="#FF37F7EA" Height="36" Click="Button_Click" HorizontalAlignment="Center" />
        <Label Grid.Row="3" Content="Выполнено" FontSize="24" Foreground="#FF37F7EA" HorizontalAlignment="Center" VerticalAlignment="Center" Height="41"/>
        <TextBox x:Name="Podrobnosti" Grid.Column="1" Grid.RowSpan="5" Background="{x:Null}" Foreground="#FF37F7EA" BorderBrush="#FF020612" Grid.Row="1" FontSize="24"/>
        <Rectangle Grid.Row="0" Grid.Column="0" Stroke="#FF1151A7" Width="7" Fill="#FF1151A7" Grid.RowSpan="5" Margin="0,1,0,1" HorizontalAlignment="Right"/>
        <Rectangle Grid.Row="0" Grid.Column="0" Stroke="#FF1151A7" HorizontalAlignment="Left" Grid.ColumnSpan="2" Fill="#FF1151A7" Height="5" Width="{Binding ActualWidth, ElementName=grid}" VerticalAlignment="Bottom">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <ScrollViewer x:Name="figny" Grid.Row="2" Grid.Column="0"/>
        <ScrollViewer x:Name="figny1" Grid.Row="4" Grid.Column="0"/>

    </Grid>
</Window>
