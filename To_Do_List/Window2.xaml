<Window x:Class="To_Do_List.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:To_Do_List"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400*"/>
            <ColumnDefinition Width="400*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="86*"/>
            <RowDefinition Height="67*"/>
            <RowDefinition Height="163*"/>
            <RowDefinition Height="59*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Grid.Column="0" Source="/maxresdefault.jpg" Margin="0,-8,0,0" Stretch="Fill" Grid.RowSpan="5" Grid.ColumnSpan="2"/>
        <Button Content="Введите название квеста" FontSize="24" Foreground="#FF37F7EA" HorizontalAlignment="Left" VerticalAlignment="Center" Background="{x:Null}" Click="Name_kw" Grid.ColumnSpan="2" Margin="261,0,0,0"/>
        <Button Grid.Row="1" Content="Введите описание квеста" FontSize="24" Foreground="#FF37F7EA" HorizontalAlignment="Left" VerticalAlignment="Top" Background="{x:Null}" Click="Opis_kw" Margin="259,86,0,0" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
        <TextBox x:Name="NameKv" Grid.Row="1"  Background="{x:Null}" Foreground="#FF37F7EA" BorderBrush="#FF020612" FontSize="24" TextChanged="TextBox_TextChanged" Grid.ColumnSpan="2"/>
        <TextBox x:Name="OpisKv" Grid.Row="3" Grid.Column="0" Background="{x:Null}" Foreground="#FF37F7EA" BorderBrush="#FF020612" FontSize="24" Grid.ColumnSpan="2"/>
        <Button Grid.Row="4" Grid.Column="1" Content="Сохранить" VerticalAlignment="Center" FontSize="24" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="#FF37F7EA" Height="36" Click="Save" HorizontalAlignment="Center" />
        <Button Grid.Row="4" Grid.Column="0" Content="Отмена" VerticalAlignment="Center" FontSize="24" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="#FF37F7EA" Height="36" Click="Otmena" HorizontalAlignment="Center" />
    </Grid>
</Window>
