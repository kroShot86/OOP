<Window x:Class="To_Do_List.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:To_Do_List"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="86*"/>
            <RowDefinition Height="67*"/>
            <RowDefinition Height="222*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Grid.Column="0" Source="/maxresdefault.jpg" Margin="0,-8,0,0" Stretch="Fill" Grid.RowSpan="4"/>
        <Button Grid.Row="0" Content="Введите название квеста" FontSize="24" Foreground="#FF37F7EA" HorizontalAlignment="Center" VerticalAlignment="Center" Background="{x:Null}" Click="Button_Click"/>
        <Button Grid.Row="2" Content="Введите описание квеста" FontSize="24" Foreground="#FF37F7EA" HorizontalAlignment="Center" VerticalAlignment="Top" Background="{x:Null}" Click="Button_Click_1"/>
        <TextBox x:Name="NameKv" Background="{x:Null}" Foreground="#FF37F7EA" BorderBrush="#FF020612" FontSize="24" TextChanged="TextBox_TextChanged" Margin="0,59,0,0" Grid.RowSpan="2"/>
        <TextBox x:Name="OpisKv" Grid.Row="3" Background="{x:Null}" Foreground="#FF37F7EA" BorderBrush="#FF020612" FontSize="24"/>
    </Grid>
</Window>
